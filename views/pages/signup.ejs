<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs',{title:"SignUp"}) %>
    <style>
        .error{
            color:red;
        }
        .error>h3{
            font-size:15px;
        }
    </style>
</head>

<body>
    <%- include('../partials/nav.ejs',{path:'/signup'}) %>
        <%- include('../partials/section.ejs',{title:'SignUp'}) %>
            <div class="container">
                <div class="row" style="width: 40%; margin-left: 35%;">
                    <form action="/signup" class="form" method="post">
                        <% if (error) { %>
                            <div class="error">
                                <h3><%= error %> </h3>
                            </div>
                        <% } %>
                        <div class="form-group">
                            <label for="username">UserName</label>
                            <input value="<%= username %>" class="form-control" type="text" name="username" id="username" />
                        </div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input value="<%= name %>" class="form-control" type="text" name="name" id="name" />
                        </div>
                        <div class="form-group">
                            <label for="mobile">Mobile</label>
                            <input value="<%= mobile %>" class="form-control" type="text" name="mobile" id="mobile" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input value="<%= password %>" class="form-control" type="password" name="password" id="password" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">SignUp</button>
                        </div>
                    </form>
                </div>
            </div>
</body>

</html>